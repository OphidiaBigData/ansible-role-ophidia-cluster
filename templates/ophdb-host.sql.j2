INSERT INTO host (hostname, cores, memory) SELECT '{{ ansible_default_ipv4.address }}',4,1 FROM DUAL WHERE NOT EXISTS (SELECT hostname FROM host WHERE hostname='{{ ansible_default_ipv4.address }}') LIMIT 1;
INSERT IGNORE INTO hashost (idhostpartition, idhost) SELECT 1, host.idhost FROM host WHERE hostname='{{ ansible_default_ipv4.address }}';
INSERT INTO dbmsinstance (idhost, login, password, port) SELECT host.idhost, 'root', '{{ ophdb_passwd }}', 3306 FROM host WHERE hostname='{{ ansible_default_ipv4.address }}' AND NOT EXISTS (SELECT * FROM dbmsinstance INNER JOIN host ON host.idhost = dbmsinstance.idhost WHERE hostname='{{ ansible_default_ipv4.address }}' AND port=3306) LIMIT 1;
INSERT INTO dbmsinstance (idhost, login, password, port, ioservertype) SELECT host.idhost, 'root', '{{ ophdb_passwd }}', 65000, 'ophidiaio_memory' FROM host WHERE hostname='{{ ansible_default_ipv4.address }}' AND NOT EXISTS (SELECT * FROM dbmsinstance INNER JOIN host ON host.idhost = dbmsinstance.idhost WHERE hostname='{{ ansible_default_ipv4.address }}' AND port=65000) LIMIT 1;
